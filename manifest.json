{
  "manifest_version": 2,
  "name": "Full screen Youtube",
  "description": "This extension to full screen youtube video",
  "version": "1.0.4",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": { "128": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "css": ["fullScreen.css"],
      "js": ["jquery-1.11.3.min.js", "fullScreen.js"],
      "all_frames": true
    }
  ]
}
